<div class="protector-show-img col-6">
  <% if protector.image.attached? %>
    <%= image_tag protector.image.variant(combine_options:{gravity: :center, resize:"300x300^", crop:"300x300+0+0"}).processed %>
  <% else %>
    <%= image_tag "protector_default.png", :size => "300x300" %>
  <% end %>
</div>
<div class="protector-show-right col-6">
  <div class="protector-right-1 row">
    <div class="protector-name col-9">
      <h1><%= protector.name %></h1>
    </div>
    <div class="protector-edit-link col-3" id="protector-<%= protector.id %>">
      <% if protector_signed_in? && protector == current_protector %>
        <%= link_to "編集", edit_protector_registration_path(protector.id), class: "btn btn-outline-dark" %>
      <% elsif user_signed_in? %>
        <%= render 'relationships/follow', protector: protector %>
      <% end %>
    </div>
  </div>
  <div class="protector-right-2">
    <div class="protector-show-info row">
      <div class="col-6">
        <p>所在地</p>
      </div>
      <div class="col-6">
        <%= protector.address %>
      </div>
    </div>
    <div class="protector-show-info row">
      <div class="col-6">
        <p>Webサイト</p>
      </div>
      <div class="col-6">
        <%= protector.url %>
      </div>
    </div>
    <div class="follow-message row">
      <div class="protector-follow col-6">
        <%= render 'protectors/follower', protector: protector, relationships: relationships %>
      </div>
      <% if user_signed_in? %>
        <div class="message-link col-6">
          <% if @isroom == true %>
            <%= link_to "メッセージ画面へ", room_path(@roomid), class: "btn btn-outline-dark" %>
          <% else %>
            <%= form_for @room, url: rooms_path(id: @room.id), method: :post do |f| %>
              <%= fields_for @entry do |e| %>
                <%= e.hidden_field :protector_id, value: @protector.id %>
              <% end %>
              <%= f.submit "メッセージを送る", class: "btn btn-outline-dark" %>
            <% end %> 
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
