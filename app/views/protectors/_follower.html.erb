<button type="button" class="btn btn-outline-dark follower-count" data-toggle="modal" data-target="#user-follow">
  <p>フォロワー<span id="protector-follower"><%= relationships.count %></span>人</p>
</button>
<div class="modal fade" id="user-follow" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-sm follow-modal" role="document">
    <div class="modal-content container follow-container">
      <% protector.users.each do |user| %>
        <div class="follow-info row">
          <div class="follow-img col-3">
          <% if user.image.attached? %>
            <%= image_tag user.image.variant(combine_options:{gravity: :center, resize:"40x40^", crop:"40x40+0+0"}).processed %>
          <% else %>
            <%= image_tag "user_default.png", :size => "40x40" %>
          <% end %>
          </div>
          <div class="follow-name col-9">
            <%= link_to user_path(user) do %>
              <p><%= user.name %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>