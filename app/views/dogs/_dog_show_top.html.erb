<div class="dog-show-img col-6">
  <%= image_tag dog.image.variant(combine_options:{gravity: :center, resize:"300x300^", crop:" 300x300+0+0"}).processed, class: "img-fluid" %>
</div>
<div class="dog-show-right col-6">
  <div class="dog-right-1 row">
    <div class="dog-name col-8">
      <h1>
        <%= dog.name %>
        <% if dog.gender == "男の子" %>
          <span>くん</span>
        <% else %>
          <span>ちゃん</span>
        <% end %>
      </h1>
    </div>
    <div class="dog-top-link col-4" id="dog-<%= dog.id %>">
      <% if user_signed_in? %>
        <%= render 'favorites/like', dog: dog %>
      <% elsif protector_signed_in? && dog.protector_id == current_protector.id %>
        <ul class="dog-edit-destroy">
          <li class="dog-edit-btn float-left">
            <%= link_to "編集", edit_dog_path(dog.id), class: "btn btn-outline-dark" %>
          </li>
          <li class="dog-destroy-btn float-right">
            <%= link_to dog_path(dog), data: { confirm: "本当に削除しますか?" }, method: :delete do %>
              <i class="fas fa-trash-alt fa-2x"></i>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="dog-right-2">
    <div class="dog-show-info row">
      <div class="col-6">
        <p>年齢</p>
      </div>
      <div class="col-6">
        <%= dog.age %>
      </div>
    </div>
    <div class="dog-show-info row">
      <div class="col-6">
        <p>所在地</p>
      </div>
      <div class="col-6">
        <%= dog.address %>
      </div>
    </div>
    <div class="dog-show-info row">
      <div class="col-6">
        <p>性別</p>
      </div>
      <div class="col-6">
        <%= dog.gender %>
      </div>
    </div>
    <div class="dog-show-info row">
      <div class="col-6">
        <p>大きさ</p>
      </div>
      <div class="col-6">
        <%= dog.size %>
      </div>
    </div>
    <%= render 'dogs/like', dog: dog, favorites: favorites %>
  </div>
</div>
<% if dog.profile.present? %>
  <div class="profile-text">
    <%= safe_join(dog.profile.split("\n"),tag(:br)) %>
  </div>
<% end %>