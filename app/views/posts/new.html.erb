<div class="posts">
  <div class="posts-container">
    <div class="post-new">
      <h1><i class="fas fa-dog"></i>保護犬の日常投稿</h1>
      <%= form_for [@dog, @post] do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="field post-field">
          <%= f.label :image, "写真" %><br />
          <div class="image-file post-image-file">
            <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
          </div>
        </div>
        <div class="field post-field">
          <%= f.label :content, "キャプション" %><br />
          <%= f.text_area :content, autofocus: true, :placeholder => "キャプションを書く（200文字以内）", autocomplete: "name" %>
        </div>
        <div class="actions post-button">
          <%= f.submit "投稿", :class=>"btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>