<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>　
  <div class="field">
    <%= f.label :image, "アイコン" %><br />
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "sign-up-field" %>
  </div>
  <div class="field">
    <%= f.label :name, "ユーザー名" %><span class="mandatory">必須</span><br />
    <%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名", autocomplete: "name", class: "sign-up-field" %>
  </div>
  <div class="field">
    <%= f.label :email, "Eメールアドレス" %><span class="mandatory">必須</span><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Eメールアドレス", autocomplete: "email", class: "sign-up-field" %>
  </div>
  <div class="field">
    <%= f.label :profile, "自己紹介" %><br />
    <%= f.text_area :profile, autofocus: true, class: "form-control", :placeholder => "自己紹介", autocomplete: "profile", class: "sign-up-field" %>
  </div>
  <div class="field">
    <%= f.label :address, "居住地" %><span class="mandatory">必須</span><br />
    <%= f.select :address, User.addresses.keys, {prompt: '選択してください'}, class: 'form-control sign-up-field' %>
  </div>
  <div class="field">
    <%= f.label :family_people, "同居家族人数（ご自身含め）" %><span class="mandatory">必須</span><br />
    <%= f.select :family_people, User.family_people.keys, {prompt: '選択してください'}, class: 'form-control sign-up-field' %>
  </div>
  <div class="field">
    <%= f.label :house, "居住形態" %><span class="mandatory">必須</span><br />
    <%= f.select :house, User.houses.keys, {prompt: '選択してください'}, class: 'form-control sign-up-field' %>
  </div>
  <div class="field">
    <%= f.label :caretaker, "お留守番時間（保護犬を迎える場合）" %><span class="mandatory">必須</span><br />
    <%= f.select :caretaker, User.caretakers.keys, {prompt: '選択してください'}, class: 'form-control sign-up-field' %>
  </div>
  <div class="field">
    <%= f.label :password, "パスワード" %><span class="mandatory">必須</span></br>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %>文字以上）</em>
    <% end %><br />
    <%= f.password_field :password, :placeholder => "パスワード（６文字以上）", autocomplete: "new-password", class: "sign-up-field" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><span class="mandatory">必須</span><br />
    <%= f.password_field :password_confirmation, :placeholder => "パスワード（確認用）", autocomplete: "new-password", class: "sign-up-field" %>
  </div>
  <div class="actions">
    <%= f.submit "登録", :class=>"btn btn-outline-dark sign-up-btn" %>
  </div>
<% end %>