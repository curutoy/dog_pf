<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
　　
  <div class="field">
    <%= f.label :アイコン %><br />
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名", autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Eメールアドレス", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_field :profile, autofocus: true, class: "form-control", :placeholder => "自己紹介", autocomplete: "profile" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.select :address, User.addresses.keys, {prompt: '選択してください'}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :同居家族人数（ご自身含め） %><br />
    <%= f.select :family_people, User.family_people.keys, {prompt: '選択してください'}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :居住形態 %><br />
    <%= f.select :house, User.houses.keys, {prompt: '選択してください'}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :お留守番時間（保護犬を家族に迎える場合） %><br />
    <%= f.select :caretaker, User.caretakers.keys, {prompt: '選択してください'}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, :placeholder => "パスワード（６文字以上）", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :placeholder => "パスワード（確認用）", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
