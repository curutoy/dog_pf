<span class="follow">
  <% if protector.follow?(current_user) %>
    <%= form_for(protector.relationships.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
       <%= f.submit "フォロー中", class: "btn btn-dark follow-btn" %>
    <% end %>
  <% else %>
    <%= form_for(protector.relationships.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :protector_id, protector.id %></div>
       <%= f.submit "フォローする", class: "btn btn-outline-dark follow-btn" %>
    <% end %>
  <% end %>
</span>