              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to "一般の方", new_user_registration_path, class: "dropdown-item" %>
                <%= link_to "保護活動家", new_protector_registration_path, class: "dropdown-item" %>
