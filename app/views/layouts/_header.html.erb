                  <p>保護犬登録</p>
                <% end %>
              <% end %>
            </li>
            <li class="nav-item head-img">
              <% if user_signed_in? %>
                <%= link_to user_path(current_user) do %>
                  <% if current_user.image.attached? %>
                    <%= image_tag current_user.image.variant(combine_options:{gravity: :center, resize:"50x50^", crop:"50x50+0+0"}).processed %>
